<div class="row">
    <div class="col-md-4">
        <img class="img-responsive center-block" src="{{user.image}}" style="width: 250px;margin-bottom: 25px;">
    </div>
    <div class="col-md-8">
        <h3>{{user.name}}</h3>
        {{#if userComment}}
          <h3>{{postLength userComment}}則評論</h3>
        {{/if}}
        <button type="button" class="btn btn-link">
          <a href="/users/{{user.id}}/edit">
            Edit
          </a>
        </button>
    </div>
    <hr>
</div>

<hr>

<div class="row">
  <div class="col-md-12">
