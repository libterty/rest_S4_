<h1>Top10 人氣餐廳</h1>
<br />
<br />
<div>
    <div class="row">
        {{#each restaurant}}
        <div class="col-md-12 card" style="padding-bottom: 0.5rem;">
            <div class="row card-body">
                <div class="col-md-4">
                    <img class="card-img-top" src="{{this.image}}" alt="Card image cap" width="191px" height="120px">
                </div>
                <div class="col-md-8">
                    <h3>{{this.name}}</h3>
                    <ul class="list-group">
                        <li class="list-group-item"><strong>收藏次數 : </strong><small>{{this.favCounts}}</small></li>
                        <li class="list-group-item"><strong>{{reduceLength this.description}}</strong></li>
                    </ul>
                    <div class="row align-items-start" style="padding-top: 0.25rem; padding-left: 1rem;">
                        <a class="btn btn-primary" href="/restaurants/{{this.id}}" role="button">Show</a>
                        {{#if isFavorited }}
                            <form action="/favorite/{{this.id}}?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-danger">移除最愛</button>
                            </form>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>